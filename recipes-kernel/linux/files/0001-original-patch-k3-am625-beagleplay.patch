 arch/arm64/boot/dts/ti/k3-am625-beagleplay.dts | 8 ++++++--
 1 file changed, 6 insertions(+), 2 deletions(-)

diff --git a/arch/arm64/boot/dts/ti/k3-am625-beagleplay.dts b/arch/arm64/boot/dts/ti/k3-am625-beagleplay.dts
index 008e0ee224f7..733237beb207 100644
--- a/arch/arm64/boot/dts/ti/k3-am625-beagleplay.dts
+++ b/arch/arm64/boot/dts/ti/k3-am625-beagleplay.dts
@@ -15,7 +15,7 @@
 
 / {
 	compatible = "beagle,am625-beagleplay", "ti,am625";
-	model = "BeagleBoard.org BeaglePlay";
+	model = "BeagleBoard.org BeaglePlay Modified Andres!";
 
 	aliases {
 		ethernet0 = &cpsw_port1;
@@ -289,7 +289,7 @@ cpsw3g_phy1: ethernet-phy@1 {
 
 	mikrobus0: linux-mikrobus {
 		symlink = "play/mikrobus";
-		compatible = "linux,mikrobus";
+		compatible = "my,i2c-gyro";
 		pinctrl-names = "default", "pwm_default", "pwm_gpio",
 				"uart_default", "uart_gpio", "i2c_default",
 				"i2c_gpio", "spi_default", "spi_gpio";
@@ -971,6 +971,10 @@ &main_i2c3 {
 	clock-frequency = <400000>;
 	status = "okay";
 	symlink = "play/mikrobus/i2c";
+	gyro: gyro@68 {
+        compatible = "my,i2c-gyro";
+        reg = <0x68>;
+    };
 };
 
